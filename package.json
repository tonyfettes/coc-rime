{
  "name": "coc-rime",
  "version": "0.1.3-alpha",
  "description": "Rime input method integration of coc.nvim",
  "author": "Tony Fettes <feihaoxiang2014@gmail.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "keywords": [
    "coc.nvim",
    "rime"
  ],
  "engines": {
    "coc": "^0.0.80"
  },
  "scripts": {
    "lint": "eslint src --ext ts",
    "clean": "rimraf lib",
    "watch": "node esbuild.js --watch",
    "prepack": "node esbuild.js",
    "prepare": "npm-run-all clean prepack"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 120,
    "semi": true
  },
  "devDependencies": {
    "@types/mkdirp": "^0.5.2",
    "@typescript-eslint/eslint-plugin": "^4.8.2",
    "@typescript-eslint/parser": "^4.8.2",
    "async-mutex": "^0.2.6",
    "coc.nvim": "^0.0.80",
    "esbuild": "^0.8.42",
    "eslint": "^7.14.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.0",
    "ts-loader": "^8.0.2",
    "typescript": "^4.1.2",
    "untildify": "^5.0.0",
    "vscode-languageserver-protocol": "^3.14.1",
    "vscode-languageserver-textdocument": "^1.0.1",
    "vscode-languageserver-types": "^3.14.0"
  },
  "activationEvents": [
    "*"
  ],
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "coc-rime configuration",
      "properties": {
        "rime.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable coc-rime extension"
        },
        "rime.schemaId": {
          "type": "string",
          "default": "luna_pinyin",
          "description": "Rime schema selected when startup"
        },
        "rime.shortcut": {
          "type": "string",
          "default": "ã„“",
          "description": "Rime source shortcut"
        },
        "rime.priority": {
          "type": "number",
          "default": 0,
          "description": "Priority of Rime completion source"
        },
        "rime.binaryPath": {
          "type": "string",
          "description": "Path of binary executive file of rime-cli"
        },
        "rime.sharedDataDir": {
          "type": "string",
          "description": "shared data directory of rime. By default it will search some paths: `/usr/share/rime-data`, ..."
        },
        "rime.userDataDir": {
          "type": "string",
          "description": "user data directory of rime. By default it will search some paths: `~/.config/ibus/rime`, ..."
        },
        "rime.logDir": {
          "type": "string",
          "description": "log directory of rime. A non-existent directory will disable logging. By default it will be `~/.config/coc/extensions/coc-rime-data`"
        }
      }
    },
    "commands": [
      {
        "command": "rime.enable",
        "title": "Enable the Rime source"
      },
      {
        "command": "rime.disable",
        "title": "Disable the Rime source"
      },
      {
        "command": "rime.toggle",
        "title": "Toggle the Rime source"
      }
    ]
  }
}
